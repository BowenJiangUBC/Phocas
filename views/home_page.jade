extends layout

block content
    #login
        a(href = '/sign_in')
            img(src="images/signin.jpg", style='height:30px;width=50px;')

    #signup
        a(href = '/sign_up')
            img(src="images/signup.png", style='height:35px;width=50px;')

    #manage
        a(href = '/manage_comics') Manage comics


    form#formSearch.form(name="adduser",method="post",action="/")
        input#inputUserName.search(type="text", size = 25, placeholder="Find a comic", name="search")
        button#btnSubmit.searchbutton(type="submit") search
    
    ul
        if comicSets.length
            if (indicator === 1)
                li
                    p #{title}
                        each image in animagelist
                            a(href='/comic_page/' + image.comicSetTitle)
                                img#comicSetImage(class="uploadedImage", src= '#{image.imageUrl}')
            else if (indicator === 2)
                p Not Found
                form#formBack(name="adduser", method="get", action="/")
                    button#back(type="submit") Home Page
            else
                each comicSet, c in comicSets
                    li
                        p #{comicSet.title}
                            each image, i in comicSet.imageList
                                a(href='/comic_page/' + comicSet.title)
                                    img#comicSetImage(class="uploadedImage", src= '#{image.imageUrl}')
        else
            p empty comicSet

