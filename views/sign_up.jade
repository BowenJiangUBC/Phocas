extends layout

block content
    head
        link(rel='stylesheet', href='/stylesheets/style-page.css')
        link(rel='stylesheet', href='/stylesheets/font-awesome.css')
       

    body

        nav.o-home-nav
            a.o-home-nav__link(href='/')
                //i.fa.fa-arrow-left
                .fa-1x Home 

        nav.o-home-nav
            if(loggedin === 1)
                a.o-home-nav__link(href='/edit_comic')
                    //i.fa.fa-arrow-left
                    .fa-1x Create
            else
                a.o-home-nav__link(href='/login')
                    //i.fa.fa-arrow-left
                    .fa-1x Create

        nav.o-header-nav
            if(loggedin === 1)
                a.o-header-nav__link(href='/manage_comics')
                    //i.fa.fa-arrow-left
                    .fa-1x Manage
            else
                a.o-header-nav__link(href='/login')
                    //i.fa.fa-arrow-left
                    .fa-1x Manage

            a.o-header-nav__link(href='/sign_up')
                .fa-1x Sign Up
                //i.fa.fa-star

        header.o-header
            .o-container
                a(href='/')
                    h1.o-header__title Phocas

        main.o-container
            .o-container
                .o-section
                    form#formSignIn(name="adduser",method="post",action="/sign_up")
                        t1 Please enter your username.
                        br
                        input#inputUserName(type="text", placeholder="username", name="username")
                        br
                        t2 Please type in your password. (note: your password has to be at least 8 characters)
                        br
                        input#inputPassword(type="password", placeholder="password", name="userpassword")
                        br
                        button#btnSubmit(type="submit") submit
        
          

        footer.o-footer
            .o-container
                small Â© 2016, Phocas
        
